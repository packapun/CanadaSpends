# AWS Region
aws_region = "us-east-1"

# EC2 instance type
instance_type = "t3.medium"

# SSH key pair name (must already exist in AWS)
key_name = "your-key-pair-name"

# Volume sizes in GB
root_volume_size = 20
data_volume_size = 50

# IP allowlists (for better security, restrict these)
ssh_allowed_ips = ["0.0.0.0/0"]  # Restrict to your IP for better security
api_allowed_ips = ["0.0.0.0/0"]
slackbot_allowed_ips = ["0.0.0.0/0"] 